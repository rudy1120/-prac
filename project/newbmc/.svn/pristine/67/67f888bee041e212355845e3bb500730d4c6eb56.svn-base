.main_visual {height: 800px; background: url(/history/img/main/bg_main.jpg) no-repeat center center / cover; position: relative;}
.main_visual .main_txt {position: absolute; top:50%; left:0; transform: translateY(-50%); width:100%; color:#fff; text-align: center; font-size:1.8em;}
.main_visual .main_txt .main_txt_point {font-size: 1.2em; color: #fabe00; margin-bottom: 40px; opacity: 0; animation: main_event 0.5s ease-in-out forwards;}
.main_visual .main_txt h3 {font-size: 3em; margin-bottom: 40px; opacity: 0; animation: main_event 0.5s ease-in-out forwards; animation-delay: 0.25s;}
.main_visual .main_txt h3:after {content:""; display: block; width:74px; height: 3px; background: #fff; margin: 40px auto 0;}
.main_visual .main_txt p:last-of-type {line-height: 1.4; opacity: 0; animation: main_event 0.5s ease-in-out forwards; animation-delay: 0.5s;}

@keyframes main_event {
    0% { opacity: 0; transform: translateY(50px)}
    100% {opacity: 1; transform: translateY(0)}
}

.main_contents section {padding:70px 0;}
.main_contents .section_tit {text-align: center; font-size: 2.6em; font-weight: normal; padding:0 15px; margin-bottom:50px;}
.main_contents .section_tit > img {vertical-align: 2px;}
.main_contents .section_sub_tit {text-align: center; padding:0 15px; margin-bottom: 50px;}
.main_contents .section_inner {max-width:1740px; margin: 0 auto; padding: 0 15px;}
.main_contents .section_inner:after {content: ""; display: block; clear: both;}

.main_contents .section1 {background: url(/history/img/main/bg_section1.jpg) no-repeat center center / cover; padding-bottom: 140px;}
.main_contents .section1 .section_slider {max-width: 1200px; margin:0 auto;}
.main_contents .section1 .section_slider .slide {height: 350px;}
.main_contents .section1 .section_slider .slide:after {content:""; display: block; clear: both;}
.main_contents .section1 .section_slider .slide-thumb {width:calc(100% - 400px); height: 100%; position: relative; overflow: hidden; float: left;}
.main_contents .section1 .section_slider .slide-thumb img {min-width: 100%; min-height: 100%; max-width: none; position: absolute; top:50%; left:50%; transform: translate(-50%, -50%);}
.main_contents .section1 .section_slider .slide-info {float: left; width: 400px; height: 100%; background: #301e1e; color:#fff; padding: 50px;}
.main_contents .section1 .section_slider .slide-info .tit {font-size: 2em; word-break: keep-all; line-height: 1.2; margin-bottom: 10px;}
.main_contents .section1 .section_slider .slide-info .date {display:inline-block; color:#aaa; margin-bottom: 20px;}
.main_contents .section1 .section_slider .slide-info .sumry {border-top:1px solid #aaa; padding:20px 0; line-height: 1.4;}
.main_contents .section1 .section_slider .slick-arrow {position: absolute; top:50%; text-indent: -9999px; overflow: hidden; width: 27px; height: 53px; z-index: 1; background: url(/history/img/common/ico_arrow_slide.png) no-repeat center center; transform: translateY(-50%);}
.main_contents .section1 .section_slider .slick-prev {left:-120px;}
.main_contents .section1 .section_slider .slick-next {right:-120px; transform: translateY(-50%) rotate(180deg);}
.main_contents .section1 .section_slider .slick-dots {position: absolute; bottom: -70px; left:0; text-align: center; width:100%;}
.main_contents .section1 .section_slider .slick-dots > li {display: inline-block; margin: 0 5px;}
.main_contents .section1 .section_slider .slick-dots > li button {overflow: hidden; width: 24px; height: 24px;}
.main_contents .section1 .section_slider .slick-dots > li.slick-active button {border-bottom: 2px solid #999; font-weight: bold;}

.main_contents .section2 {background: #fff url(/history/img/main/bg_section2.png) no-repeat right top;}
.main_contents .section2 article {width:calc(50% - 10px); float:left; color:#fff; text-align: center; font-size: 1.5em; line-height: 1.2;}
.main_contents .section2 article .item {position: relative; display: block;}
.main_contents .section2 article .item > div {position: absolute; top:50%; left:0; width:100%; transform: translateY(-50%);}

.main_contents .section2 .article1 {margin-right: 20px;}

.main_contents .section2 .article1 .article1_1 {margin-bottom: 20px;}
.main_contents .section2 .article1 .article1_1:after {content:""; display: block; clear: both;}
.main_contents .section2 .article1 .article1_1 > .item {float: left; width:calc(33.3333% - 15px); height: 480px; margin-left:20px; transition: all 0.3s ease-out;}
.main_contents .section2 .article1 .article1_1 > .item:hover,
.main_contents .section2 .article1 .article1_1 > .item:focus {transform: scale(1.05);}
.main_contents .section2 .article1 .article1_1 > .item1 {margin-left: 0; background: url(/history/img/main/bg_article1_1_1.jpg) no-repeat center center / cover;}
.main_contents .section2 .article1 .article1_1 > .item2 {background: url(/history/img/main/bg_article1_1_2.jpg) no-repeat center center / cover;}
.main_contents .section2 .article1 .article1_1 > .item3 {float:right; background: url(/history/img/main/bg_article1_1_3.jpg) no-repeat center center / cover;}

.main_contents .section2 .article1 .article1_2:after {content:""; display: block; clear: both;}
.main_contents .section2 .article1 .article1_2 > .item {float:left; width:calc(50% - 10px); height: 230px; margin-left: 20px; transition: all 0.3s ease-out;}
.main_contents .section2 .article1 .article1_2 > .item:hover,
.main_contents .section2 .article1 .article1_2 > .item:focus {transform: scale(1.05);}
.main_contents .section2 .article1 .article1_2 > .item1 {margin-left: 0; background: url(/history/img/main/bg_article1_2_1.jpg) no-repeat center center / cover;}
.main_contents .section2 .article1 .article1_2 > .item2 {float:right; background: url(/history/img/main/bg_article1_2_2.jpg) no-repeat center center / cover;}

.main_contents .section2 .article2 {margin-right: 0;}
.main_contents .section2 .article2 > .item {height: 230px; margin-top: 20px; transition: all 0.3s ease-out;}
.main_contents .section2 .article2 > .item:hover,
.main_contents .section2 .article2 > .item:focus {transform: scale(1.025);}
.main_contents .section2 .article2 > .item1 {margin-top: 0; background: url(/history/img/main/bg_article2_1.jpg) no-repeat center center / cover;}
.main_contents .section2 .article2 > .item2 {background: url(/history/img/main/bg_article2_2.jpg) no-repeat center center / cover;}
.main_contents .section2 .article2 > .item3 {background: url(/history/img/main/bg_article2_3.jpg) no-repeat center center / cover;}

@media all and (max-width:1024px) {
    .main_visual .main_txt {font-size:1.4em;}

    .main_contents .section_tit {font-size: 2em;}
    .main_contents .section_tit > img {height: 20px; vertical-align: 0;}
}

@media all and (max-width:768px) {
    .main_visual .main_txt {font-size:1.2em;}
    .main_visual {height:500px;}
    .main_contents .section2 .article1 .article1_1 > .item {height:300px;}

    .main_contents .section1 .section_slider .slide {height: 460px;}
    .main_contents .section1 .section_slider .slide-thumb {width:100%; height: calc(100% - 200px);}
    .main_contents .section1 .section_slider .slide-info {width:100%; height: 200px; padding:30px;}

    .main_contents .section2 article {width:100%; margin-right: 0;}
    .main_contents .section2 .article1 {margin-bottom: 20px;}
}